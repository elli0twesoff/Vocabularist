<%= link_to 'home', root_path %>
<h2>word list (english to german)</h2>

<table>
  <thead>
    <tr>
      <th>english</th>
      <th>deutsch</th>
			<th>chapter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @english_words.each do |english_word| %>
      <tr>
        <td><%= english_word.word %></td>
				<td><%= "#{english_word.german_word.article} #{english_word.german_word.word}" %></td>
        <td><%= english_word.chapter %></td>
        <td><%= link_to 'destroy', english_word, method: :delete, data: { confirm: 'are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'add word', new_english_word_path %><br />
<%= link_to 'destroy all', english_words_destroy_all_path, method: :destroy %>
