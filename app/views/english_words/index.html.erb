<%= link_to 'add word', new_english_word_path %><br />
<%= link_to 'load from file', german_words_load_from_file_path %><br />


<h2>word list (english to german)</h2>

<table class='word-list'>
  <thead>
    <tr>
      <th>english</th>
      <th>german</th>
			<th>plurals</th>
			<th>chapter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @english_words.each do |english_word| %>
			<tr> 
        <td><%= english_word.word %></td>
				<td>
					<% english_word.german_words.each do |german_word| %>
						<%= german_word.article %> <%= german_word.word %>,
					<% end %>
				</td>
				<td><%= english_word.german_words.map(&:plurals).flatten.map(&:word).join(', ') %></td>
        <td><%= english_word.chapter %></td>
				<td><%= link_to 'edit', edit_english_word_path(english_word) %></td>
        <td><%= link_to 'destroy', english_word, method: :delete, data: { confirm: 'are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

