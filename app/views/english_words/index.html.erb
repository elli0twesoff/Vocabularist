<h1>Listing english_words</h1>

<table>
  <thead>
    <tr>
      <th>english</th>
      <th>deutsch</th>
			<th>chapter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @english_words.each do |english_word| %>
      <tr>
        <td><%= english_word.word %></td>
				<td><%= english_word.german_word %></td>
        <td><%= english_word.chapter %></td>
        <td><%= link_to 'destroy', english_word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'add word', new_english_word_path %>
