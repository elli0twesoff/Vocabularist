<%= form_tag(controller: 'english_words', action: 'create', method: 'post', class: 'new_words') do |f| %>
  <% if @english_word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@english_word.errors.count, "error") %> prohibited this english_word from being saved:</h2>

      <ul>
      <% @english_word.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

		note*  the article selectors are only for the special cases.  leave them blank for the normal (implied) articles.  don't be a hermaphrodite.
		<table class="add-word">
			<thead>
				<th>english:</th>
				<th>german:</th>
				<th>chapter:</th>
			</thead>

			<tbody>
				<tr>
					<td>
						<div class="field">
							<%= text_field_tag :english_word %>
						</div>
					</td>

					<td>

						<!-- non-nouns -->
						<div class="field">
							non-nouns:  
							<%= text_field_tag :non_noun %>
						</div>
						
						<!-- masculine singular -->
						<div class="field">
							<%= label_tag :masc_sing, 'masc sing.' %>
					<%= select_tag :masc_sing_art, options_for_select(['', 'der', 'die', 'das']) %>
						<%= text_field_tag :masc_sing %>
						</div>
						
						<!-- masculine plural -->
						<div class="field">
							<%= label_tag :masc_plur, 'masc plur.' %>
					<%= select_tag :masc_plur_art, options_for_select(['', 'der', 'die', 'das']) %>
						<%= text_field_tag :masc_plur %>
						</div>

						<!-- feminine singular -->
						<div class="field">
							<%= label_tag :fem_sing, 'fem sing.' %>
					<%= select_tag :fem_sing_art, options_for_select(['', 'der', 'die', 'das']) %>
						<%= text_field_tag :fem_sing %>
						</div>

						<!-- feminine plural -->
						<div class="field">
							<%= label_tag :fem_plur, 'fem plur.' %>
					<%= select_tag :fem_plur_art, options_for_select(['', 'der', 'die', 'das']) %>
						<%= text_field_tag :fem_plur %>
						</div>

						<div class="field">
							<%= label_tag :neuter_sing, 'neuter sing.' %>
					<%= select_tag :neuter_sing_art, options_for_select(['', 'der', 'die', 'das']) %>
						<%= text_field_tag :neuter_sing %>
						</div>
						
						<!-- masculine plural -->
						<div class="field">
							<%= label_tag :neuter_plur, 'neuter plur.' %>
					<%= select_tag :neuter_plur_art, options_for_select(['', 'der', 'die', 'das']) %>
						<%= text_field_tag :neuter_plur %>
						</div>

					</td>

					<td>
						<div class="field">
							<% chap_array = [] %>
							<% 11.times { |i| chap_array << i.to_s } %>
							<% chap_array.shift %>
							<%= select_tag :chapter, options_for_select(chap_array) %>
						</div>
					</td>
			</tr>
		</tbody>
	</table>

	<div class="actions">
		<%= submit_tag 'create' %>
	</div>

<% end %>
