<%= form_tag(controller: 'english_words', action: 'create', method: 'post', class: 'new_words') do |f| %>
  <% if @english_word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@english_word.errors.count, "error") %> prohibited this english_word from being saved:</h2>

      <ul>
      <% @english_word.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
		<%= label_tag :english_word, 'english' %><br />
    <%= text_field_tag :english_word %>
  </div>

  <div class="field">
		<%= label_tag :german_word_article, 'german (article + word)' %><br />
    <%= select_tag :german_word_article, options_for_select(['', 'der', 'die', 'das']) %> <%= text_field_tag :german_word %>
	</div>

  <div class="field">
		<%= label_tag :chapter, 'chapter' %><br />
    <%= number_field :chapter, nil, value: '1'%>
  </div>

  <div class="actions">
    <%= submit_tag 'create' %>
  </div>
<% end %>
